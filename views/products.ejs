<%- include('./layout/header.ejs') %>

<div class="products">
    <div>
      <div>
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="<%= menu[0].url%>">Home</a></li>
          </ol>
        </nav>
      </div>
      <div>
        <div class="no1">
          <button id="list1" class="list">list</button>
          <button id="list2" class="grid-maker">grid</button>
          
          <div>
              <select name="sort_by" id="products_sort_by">
                  <option value="">-----Tanla-----</option>
                  <option value="price high" <%if(locals.sortby === 'price high') {%> selected <%}%>>Price: High to low </option>
                  <option value="price low" <%if(locals.sortby === 'price low') {%> selected <%}%>>Price: Low to high</option>
                  <option value="created high" <%if(locals.sortby === 'created high') {%> selected <%}%>> Newest product</option>  
                  <option value="seen high" <%if(locals.sortby === 'seen high') {%> selected <%}%>> Popular</option>  
              </select>
          </div>
        </div>
  
      
  
        <div>
          <div class="container" id="container">
            <div id="products-container" class="list-container">
              <% products.forEach((item) => { %>
              <div class="item" style="position: relative;">
                <div><%= item.name %></div>
                <div>
                  <a href="/about-item/<%= item.id%>">
                    <%if(item.featured?.length > 0){%>
                      <div style="position: absolute;
                      top: 235px;
                      left: 30px;
                      background: #08548e;
                      border-radius: 20px;
                      padding: 2px 15px; 
                      color: wheat;"><%= item.featured %></div>
                      <%}%>
                    <img class="product-images" src="<%= item.image %>"/>
                  </a>
                  <%= item.description %>
                </div>
                <div>cost: <%= item.price %>$</div>
                <button class="add_product_to_cart" data-productId="<%= item.id%>">
                  <svg
                    data-v-b3e9397c=""
                    data-productId="<%= item.id%>"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg"
                    class="ui-icon add-cart-icon"
                  >
                    <path
                      data-productId="<%= item.id%>"
                      d="M8 10V8H6V12.5C6 12.7761 5.77614 13 5.5 13C5.22386 13 5 12.7761 5 12.5V7H8C8 4.59628 9.95227 3 12 3C14.0575 3 16 4.70556 16 7H19V19.5C19 20.3284 18.3284 21 17.5 21H12.5C12.2239 21 12 20.7761 12 20.5C12 20.2239 12.2239 20 12.5 20H17.5C17.7761 20 18 19.7761 18 19.5V8H16V10H15V8H9V10H8ZM12 4C10.4477 4 9 5.20372 9 7H15C15 5.29444 13.5425 4 12 4Z"
                      fill="black"
                    ></path>
                    <path
                      data-productId="<%= item.id%>"
                      d="M7.5 14C7.77614 14 8 14.2239 8 14.5V17H10.5C10.7761 17 11 17.2239 11 17.5C11 17.7761 10.7761 18 10.5 18H8V20.5C8 20.7761 7.77614 21 7.5 21C7.22386 21 7 20.7761 7 20.5V18H4.5C4.22386 18 4 17.7761 4 17.5C4 17.2239 4.22386 17 4.5 17H7V14.5C7 14.2239 7.22386 14 7.5 14Z"
                      fill="black"
                    ></path>
                  </svg>
                </button>
              </div>
              <%}) %>
  
              <!--Product searched-->
            </div>
          </div>
          <!--===================-->
        </div>
      </div>
    </div>
  </div>

<%- include('./layout/footer.ejs') %>


